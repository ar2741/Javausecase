import React from "react";
import { 
  FaTachometerAlt, 
  FaUsers, 
  FaLock, 
  FaFileAlt, 
  FaCog, 
  FaUserCircle, 
  FaQuestionCircle 
} from "react-icons/fa";
import { useNavigate } from "react-router-dom"; // If using React Router

function Sidebar() {
  const navigate = useNavigate(); // Initialize navigation hook

  // Handle menu item clicks
  const handleMenuItemClick = (path) => {
    navigate(path); // Navigate to the specified path
    // You could also add other logic here like tracking analytics
  };

  return (
    <div className="sidebar">
      <img src="/logo.png" alt="Standard Chartered" className="logo" />
      
      <ul>
        <li onClick={() => handleMenuItemClick('/dashboard')}>
          <FaTachometerAlt /> Dashboard
        </li>
        <li onClick={() => handleMenuItemClick('/user-management')}>
          <FaUsers /> User Management
        </li>
        <li onClick={() => handleMenuItemClick('/ad-group-access')}>
          <FaLock /> AD Group Access
        </li>
        <li onClick={() => handleMenuItemClick('/report-access')}>
          <FaFileAlt /> Report Access
        </li>
        <li onClick={() => handleMenuItemClick('/settings')}>
          <FaCog /> Settings
        </li>
      </ul>
      
      <div className="sidebar-bottom">
        <li onClick={() => handleMenuItemClick('/account')}>
          <FaUserCircle /> Account
        </li>
        <li onClick={() => handleMenuItemClick('/help')}>
          <FaQuestionCircle /> Help
        </li>
      </div>
    </div>
  );
}

export default Sidebar;
